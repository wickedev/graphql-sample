type Post implements Node {
    id: ID!
    _id: ID!
    title: String!
    content: String!
    author: User
}

enum PostProperty {
    ID,
    TITLE,
    CONTENT
    AUTHOR_ID
}

input PostSorting {
    property: PostProperty!
    direction: Direction!
}

type PostEdge {
    node: Post!
    cursor: String!
}

type PostConnection {
    edges: [PostEdge!]
    pageInfo: PageInfo!
}
