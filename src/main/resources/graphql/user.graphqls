type User implements Node {
    id: ID!
    _id: ID!
    name: String!
    phoneNumber: String!
    posts: [Post!]
}

enum UserProperty {
    ID,
    NAME,
    PHONE_NUMBER
}

input UserSorting {
    property: UserProperty!
    direction: Direction!
}

type UserEdge {
    node: User!
    cursor: String!
}

type UserConnection {
    edges: [UserEdge!]
    pageInfo: PageInfo!
}
